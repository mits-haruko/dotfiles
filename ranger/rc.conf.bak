#Ranger search
map <C-f> fzf_select
map <C-g> fzf_locate

#devicons
default_linemode devicons

#image support
set preview_images true
set preview_images_method ueberzug

#Mouse support
set mouse_enabled true

#Video thumbnail
set preview_script ~/.config/ranger/scope.sh

#show hidden files
set show_hidden true

##Keybindings##
#extract files
map zp compress
map ex extract

#Appearance
set colorscheme default

#Column borders
set draw_borders both

### Command Aliases for Console

alias e     edit
alias q     quit
alias Q     quit!
alias qq    quitall
alias QQ   quitall!
#alias qall  quitall
#alias qall! quitall!
#alias setl  setlocal
#
alias filter     scout -prts
alias hide       scout -prtsv
alias find       scout -aets
alias mark       scout -mr
alias unmark     scout -Mr
alias search     scout -rs
alias search_inc scout -rts
alias travel     scout -aefklst

### Define Keys for Browser

#Basic navigation and manipulation

map Q quitall
map q quit
map <C-c> copy
map <C-v> paste
map <C-x> cut
map dd shell mv %s /home/${USER}/.local/share/Trash/files/

#map dd console delete
map R console rename
map F console mkdir

#Toggle nvim editting
map <C-o> console open_with
map <C-n> open_with nvim


#KDE Connect integration
map sp shell -f send2phone %s

#drag and drop with dragon\
map <C-d> shell dragon -a -x %p


